{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Waitress",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/server.py",
            "args": [
                "waitress-serve",
                "--host=0.0.0.0",
                "--port=8000",
                "server:app"
            ],
            "stopOnEntry": false,
            "cwd": "${workspaceFolder}",
            "jinja": true,
            "console": "integratedTerminal",
            "env": {
                "GRADIO_SERVER_NAME": "http://127.0.0.1:7860",
                "FLASK_SERVER_NAME": "http://127.0.0.1:8000",
                "STREAMLIT_SERVER_NAME": "http://127.0.0.1:8081"
            },
            "preLaunchTask": "pip-install-requirements"
        }
    ]
}
